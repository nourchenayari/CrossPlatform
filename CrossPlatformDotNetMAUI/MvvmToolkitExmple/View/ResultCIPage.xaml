<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmToolkitExmple.View.ResultCIPage"
             Title="Résultat CI"
             BackgroundColor="LightGreen">
    <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">
        <Label Text="Résultat CI :" FontAttributes="Bold" TextColor="DarkGreen" FontSize="24" HorizontalTextAlignment="Center" />
        <Label Text="{Binding ResultCI}" TextColor="Black" FontSize="20" HorizontalTextAlignment="Center" />
        <Button Text="Retour" BackgroundColor="DarkGreen" TextColor="White" Clicked="OnBackButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
